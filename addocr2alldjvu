for f in *.djvu; do for p in $(seq 1 $(djvused -e n "$f"  )); do ocrodjvu -p $p --in-place --render=all --engine=cuneiform --language=rus-eng "$f"  ; done done
                    for p in $(seq 1 $(djvused -e n 3.djvu)); do ocrodjvu -p $p --in-place --render=all --engine=cuneiform --language=rus-eng 3.djvu; done
for f in *.djvu; do for p in $(seq 1 $(djvused -e n "$f"  )); do echo $p $f                                                                         ; done done

